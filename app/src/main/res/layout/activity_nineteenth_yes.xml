<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear_nq1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <CheckBox
        android:id="@+id/cb_hear_scary"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toStartOf="@+id/guide_q193"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="@+id/guide_q192"
        app:layout_constraintTop_toBottomOf="@+id/tv_yq191" />


    <CheckBox
        android:id="@+id/cb_approach"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toStartOf="@+id/guide_q193"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guide_q192"
        app:layout_constraintTop_toBottomOf="@+id/cb_hear_scary" />

    <CheckBox
        android:id="@+id/cb_unfamiliar"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toStartOf="@+id/guide_q193"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guide_q192"
        app:layout_constraintTop_toBottomOf="@+id/cb_approach" />

    <TextView
        android:id="@+id/tv_yq191"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginTop="30dp"
        android:gravity="center|left"
        android:text="For Example..."
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/guide_q193"
        app:layout_constraintStart_toStartOf="@+id/guide_q191"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_yq192"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center|left"
        android:text="If your child hears a strange or scary noise, will he/she look at you before responding?"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/guide_q192"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guide_q191"
        app:layout_constraintTop_toBottomOf="@+id/tv_yq191" />

    <TextView
        android:id="@+id/tv_yq193"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:gravity="center|left"
        android:text="Does your child look at you when someone new approaches?"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/guide_q192"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/guide_q191"
        app:layout_constraintTop_toBottomOf="@+id/tv_yq192" />

    <TextView
        android:id="@+id/tv_yq144"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:gravity="center|left"
        android:text="Does your child look at you when he/she is faced with something unfamiliar or a little scary?"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/guide_q192"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/guide_q191"
        app:layout_constraintTop_toBottomOf="@+id/tv_yq193" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_q191"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_q192"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="330dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_q193"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="395dp" />

</androidx.constraintlayout.widget.ConstraintLayout>