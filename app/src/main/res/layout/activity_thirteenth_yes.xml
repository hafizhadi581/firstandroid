<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear_nq1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <CheckBox
        android:id="@+id/cb_walk"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginTop="76dp"
        app:layout_constraintEnd_toStartOf="@+id/guide_q133"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="@+id/guide_q132"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/cb_walk_on"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginStart="16dp"
        app:layout_constraintEnd_toStartOf="@+id/guide_q133"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guide_q132"
        app:layout_constraintTop_toBottomOf="@+id/cb_walk" />


    <TextView
        android:id="@+id/tv_yq131"
        android:layout_width="310dp"
        android:layout_height="35dp"
        android:layout_marginTop="76dp"
        android:gravity="center|left"
        android:text="Does he/she walk?"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/guide_q132"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/guide_q131"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_yq132"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:gravity="center|left"
        android:text="Does he/she walk without holding on to anything?"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/guide_q132"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/tv_yq131"
        app:layout_constraintTop_toBottomOf="@+id/tv_yq131" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_q131"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_q132"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="330dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_q133"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="395dp" />

</androidx.constraintlayout.widget.ConstraintLayout>